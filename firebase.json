{
  "hosting": {
    "public": "dist/browser",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**/exchange_token*",
        "destination": "/redirect?redirect=$1",
        "type": 301
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
